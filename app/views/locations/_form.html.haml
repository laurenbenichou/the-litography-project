= form_for @location do |f|
  - if @location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :lat
    = f.text_field :lat
  .field
    = f.label :lng
    = f.text_field :lng
  .field
    = f.label :location_type
    = f.select :location_type, ['person','place','event','other']
  .field
    = f.label :media_type
    = f.select :media_type, ['audio','multimedia','visual']
  .field
    = f.label :website_url
    = f.text_field :website_url
  .field
    = f.label :short_text
    = f.text_field :short_text

  .actions
    = f.submit 'Save'
