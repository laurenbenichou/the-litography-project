= form_for @story do |f|
  - if @story.errors.any?
    #error_explanation
      %h2= "#{pluralize(@story.errors.count, "error")} prohibited this story from being saved:"
      %ul
        - @story.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :story_text
    = f.cktext_area :story_text, :ckeditor => {:language => "en"}
  .field
    = f.label :tags
    = f.text_field :tags
  .field
    = f.label :location_id
    = f.select :location_id, options_for_select(Location.all.map{|l|[l.name, l.id]})
  .actions
    = f.submit 'Save'
